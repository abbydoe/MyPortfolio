---
const { items = [] } = Astro.props;
---

<style>
  @media (max-width: 768px) {
    .responsive-tech-item {
      display: flex;
      flex-direction: row !important; /* horizontal layout */
      align-items: center !important;
      margin-bottom: 16px !important;
    }

    .responsive-tech-item img {
      margin-right: 12px !important;
    }

    .responsive-tech-item p {
      margin-top: 12px;
      font-size: 14px !important;
      line-height: 1.6 !important;
      max-width: 320px !important; /* optional */
    }
  }
</style>

{
  items.map((item) => (
    <div
      class="responsive-tech-item"
      style="display: flex; align-items: center; margin-bottom: 10px;"
    >
      <img
        src={item.image}
        alt="Icon"
        style="width: 50px; height: 50px; margin-right: 24px;"
      />
      <p>
        <strong>{item.text.bold}</strong>
        {item.text.regular}
      </p>
    </div>
  ))
}
