---
import { Image } from "astro:assets";

const {
  image,
  alt = "Project Thumbnail",
  frame = "Frame 1",
  title,
  role,
  buttonText = "View More",
  link = "#",
} = Astro.props;

// Detect if the link is external
const isExternal = link.startsWith("http");
---

<div class="hover-card">
  <a href={link}>
    <div class="image-wrapper">
      <Image src={image} alt={alt} class="card-image" />
      <div class="overlay">
        <h1>{title}</h1>
        <h2>| {role}</h2>
        {
          isExternal ? (
            <a
              href={link}
              class="view-button"
              target="_blank"
              rel="noopener noreferrer"
            >
              {buttonText}
            </a>
          ) : (
            <a href={link} class="view-button">
              {buttonText}
            </a>
          )
        }
      </div>
    </div>
  </a>

  <style>
    .hover-card {
      overflow: hidden;
      transition: transform 0.3s ease;
      display: flex;
      flex-direction: column;
      max-width: 100%;
    }
    a {
      text-decoration: none;
      color: inherit;
    }
    h1 {
      margin-bottom: 1rem;
    }
    .image-wrapper {
      width: 100%;
      height: 100%;
      position: relative;
    }

    .card-image {
      object-fit: cover;
      width: 100%;
      height: 100%;
    }

    .overlay {
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.9);
      padding: 1.2rem;
      opacity: 0;
      transition: opacity 0.3s ease;
      display: flex;
      flex-direction: column;
      justify-content: center;
      text-align: left;
    }

    .hover-card:hover .overlay {
      opacity: 1;
    }

    .frame {
      font-size: 0.9rem;
      margin-bottom: 0.5rem;
      opacity: 0.8;
    }

    h1 {
      font-size: 36px;
      padding: 0px;
    }

    h2 {
      font-size: 24px;
      font-weight: normal;
      padding: 0px;
      margin: 0px;
    }

    .view-button {
      margin-top: 2rem;
      display: inline-block;
      padding: 0.5rem 1rem;
      border: 2px solid white;
      border-radius: 8px;
      color: white;
      background: transparent;
      text-decoration: none;
      font-weight: 500;
      transition: background 0.3s ease;
      width: auto;
      max-width: fit-content;
    }

    .view-button:hover {
      background: white;
      color: black;
    }
  </style>
</div>
