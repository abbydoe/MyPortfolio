---
const { reverse = false, fullHeight = true } = Astro.props;
---

<div
  class={`column-container ${reverse ? "reverse" : ""} ${fullHeight ? "full-height" : ""}`}
>
  <div class="text-column">
    <slot name="text" />
  </div>

  <div class="image-column">
    <slot name="image" />
  </div>
</div>

<style>
  .column-container {
    display: flex;
    gap: 3rem;
    align-items: center;
    justify-content: space-between;
    margin: 40px;
    flex-wrap: wrap;
    height: auto; 
  }

  .column-container.reverse {
    flex-direction: row-reverse;
  }

  .text-column {
    flex: 1;
    padding-top: 32px;
  }

  .image-column {
    width: 45%;
    flex: 1;
    display: flex;
    justify-content: center;
  }

  img {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }

  .full-height {
    height: 70vh;
  }

  @media (max-width: 768px) {
    .column-container,
    .column-container.reverse {
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      gap: 1rem;
      margin: 20px 16px;
      height: auto;
    }

    .text-column,
    .image-column {
      width: 100%;
      max-width: 100%;
      padding: 0;
      display: block;

      h1 {
        font-size: 22px;
        margin-bottom: 1rem;
      }

      h2 {
        font-size: 18px;
        margin-bottom: 1rem;
      }

      p {
        font-size: 14px;
      }
    }

    .image-column {
      display: flex;
      justify-content: center;
    }
  }
</style>
